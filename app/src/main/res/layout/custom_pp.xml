<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pp_name_text"
        android:layout_width="37dp"
        android:layout_height="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/pp_status"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        />


    <TextView
        android:id="@+id/pp_status_text"
        android:layout_width="41dp"
        android:layout_height="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="Status"
        app:layout_constraintBottom_toTopOf="@+id/pp_lowestbid"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateIds" />


    <TextView
        android:id="@+id/pp_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"
        />


    <TextView
        android:id="@+id/pp_task_text"
        android:layout_width="30dp"
        android:layout_height="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Task"
        app:layout_constraintBottom_toTopOf="@+id/pp_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/pp_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        />


    <TextView
        android:id="@+id/pp_lowestbid_text"
        android:layout_width="69dp"
        android:layout_height="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:text="Lowest Bid"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/pp_lowestbid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="120dp"
        />


</RelativeLayout>